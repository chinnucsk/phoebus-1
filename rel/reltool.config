% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 et
{sys, [
       {lib_dirs, ["../deps"]},
       {rel, "phoebus", "0.0.1",
        [
         kernel,
         stdlib,
         sasl,
         os_mon,
	     appmon,
         debugger,
         phoebus_core,
         phoebus_algos,
	     riak_core
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "phoebus"},
       {profile, embedded},
       {mod_cond,all},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, phoebus_core, [{incl_cond, include}]},
       {app, phoebus_algos, [{mod,phoebus_core_path_find,[]},
                             {mod,phoebus_core_shortest_path,[]}
                             ]},
       {app, riak_core, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]}
      ]}.

{target_dir, "phoebus"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
           {copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
           {template, "files/phoebus", "bin/phoebus"},
	       {template, "files/phoebus-admin", "bin/phoebus-admin"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"}
           ]}.
